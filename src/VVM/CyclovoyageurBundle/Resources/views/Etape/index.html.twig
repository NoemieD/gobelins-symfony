{% extends '::base.html.twig' %}

{% block title %}Étapes - {{ parent() }}{% endblock title %}

{% block body -%}
    <h1>Liste des étapes</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('etape_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('etape_show', { 'id': entity.id }) }}">Voir</a>
                    <a class="btn btn-danger" href="{{ path('etape_edit', { 'id': entity.id }) }}">Éditer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-margin">
        <a class="btn btn-danger" href="{{ path('etape_new') }}">Ajouter une étape</a>
        <a class="btn btn-danger" href="{{ path('vvm_cyclovoyageur_homepage') }}">Retour</a>
    </div>

    {% endblock %}
