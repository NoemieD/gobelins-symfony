{% extends '::base.html.twig' %}

{% block title %}Visuliser une étape - {{ parent() }}{% endblock title %}

{% block body -%}
    <h1>Visuliser une étape</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-margin">
        <a class="btn btn-danger" href="{{ path('etape') }}">Retour</a>
        <a class="btn btn-danger" href="{{ path('etape_edit', { 'id': entity.id }) }}">Éditer</a>
    </div>

    {{ form(delete_form) }}

{% endblock %}
