{% extends '::base.html.twig' %}

{% block title %}Visuliser une étape - {{ parent() }}{% endblock title %}

{% block body -%}
    <h1>Visuliser une étape</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="btn btn-warning" href="{{ path('etape') }}">
            Retour
        </a>
    </li>
    <li>
        <a class="btn btn-warning" href="{{ path('etape_edit', { 'id': entity.id }) }}">
            Éditer
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
