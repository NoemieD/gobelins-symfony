{% extends '::base.html.twig' %}

{% block title %}Voyages - {{ parent() }}{% endblock title %}

{% block body -%}
    <h1>Voyages</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Destination</th>
                <th>Date de debut</th>
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('voyage_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.destination }}</td>
                <td>{% if entity.dateDebut %}{{ entity.dateDebut|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.dateFin %}{{ entity.dateFin|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('voyage_show', { 'id': entity.id }) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('voyage_edit', { 'id': entity.id }) }}">Ã‰diter</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-margin">
        <a class="btn btn-primary" href="{{ path('voyage_new') }}">Ajouter un voyage</a>
        <a class="btn btn-primary" href="{{ path('vvm_cyclovoyageur_homepage') }}">Retour</a>
    </div>

    {% endblock %}
