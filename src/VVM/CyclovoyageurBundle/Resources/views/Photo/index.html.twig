{% extends '::base.html.twig' %}

{% block title %}Photos - {{ parent() }}{% endblock title %}

{% block body -%}
    <h1>Mes Photos</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Alt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('photo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.alt }}</td>
                <td>

                        <a class="btn btn-warning" href="{{ path('photo_show', { 'id': entity.id }) }}">show</a>

                        <a class="btn btn-warning" href="{{ path('photo_edit', { 'id': entity.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a class="btn btn-warning right" href="{{ path('photo_new') }}">
                Create a new entry
            </a>

    {% endblock %}
