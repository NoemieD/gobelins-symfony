{% extends '::base.html.twig' %}

{% block title %}Photos - {{ parent() }}{% endblock title %}

{% block body -%}
    <h1>Mes Photos</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('photo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.name }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('photo_show', { 'id': entity.id }) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('photo_edit', { 'id': entity.id }) }}">Ã‰diter</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-margin">
        <a class="btn btn-warning" href="{{ path('photo_new') }}">Ajouter une photo</a>
        <a class="btn btn-warning" href="{{ path('vvm_cyclovoyageur_homepage') }}">Retour</a>
    </div>

    {% endblock %}
