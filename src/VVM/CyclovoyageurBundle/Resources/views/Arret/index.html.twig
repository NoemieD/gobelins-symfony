{% extends '::base.html.twig' %}

{% block title %}Arrêts - {{ parent() }}{% endblock title %}

{% block body -%}
    <h1>Liste des arrêts</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Date</th>
                <th>Description</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('arret_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.type }}</td>
                <td>

                        <a class="btn btn-warning" href="{{ path('arret_show', { 'id': entity.id }) }}">Voir</a>

                        <a class="btn btn-warning" href="{{ path('arret_edit', { 'id': entity.id }) }}">Éditer</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a class="bnt btn-warning" href="{{ path('arret_new') }}">
                Ajouter un nouvel arrêt
            </a>

    {% endblock %}
