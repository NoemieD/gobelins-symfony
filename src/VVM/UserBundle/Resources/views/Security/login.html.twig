{% extends '::base.html.twig' %}

{% block title %}Authentification - {{ parent() }}{% endblock title %}

{% block body %}

    <div class="login">
        <div class="container-login row">
            {% if error %}
                <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
            {% endif %}
            <form class="col-xs-12 col-sm-4" action="{{ path("fos_user_security_check") }}" method="post">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <label class="col-sm-6" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="col-sm-6" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="form-group">
                    <label class="col-sm-6" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="col-sm-6" type="password" id="password" name="_password" required="required" />
                </div>

                <div class="form-group col-sm-8">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                </div>

                <input class="btn btn-warning col-sm-4" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            </form>
        </div>
    </div>
{% endblock body %}